<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/restaurant_detail_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/restaurant_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/restaurant_detail_image"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/restaurant_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_below="@id/restaurant_detail_name"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restaurant_detail_description"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp">

        <Button
            android:id="@+id/restaurant_detail_location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locate"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="8dp"/>

        <Button
            android:id="@+id/restaurant_detail_phone_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="8dp"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

</RelativeLayout>
